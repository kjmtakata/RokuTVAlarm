<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/device_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Channel "/>

            <EditText
                android:id="@+id/channel_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <CheckedTextView
            android:id="@+id/sunday_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sunday"
            android:gravity="center_vertical"
            android:checkMark="?android:attr/textCheckMark"
            android:onClick="dayCheckboxOnClick"/>

        <CheckedTextView
            android:id="@+id/monday_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:gravity="center_vertical"
            android:checkMark="?android:attr/textCheckMark"
            android:onClick="dayCheckboxOnClick" />

        <CheckedTextView
            android:id="@+id/tuesday_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuesday"
            android:gravity="center_vertical"
            android:checkMark="?android:attr/textCheckMark"
            android:onClick="dayCheckboxOnClick" />

        <CheckedTextView
            android:id="@+id/wednesday_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wednesday"
            android:gravity="center_vertical"
            android:checkMark="?android:attr/textCheckMark"
            android:onClick="dayCheckboxOnClick" />

        <CheckedTextView
            android:id="@+id/thursday_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thursday"
            android:gravity="center_vertical"
            android:checkMark="?android:attr/textCheckMark"
            android:onClick="dayCheckboxOnClick" />

        <CheckedTextView
            android:id="@+id/friday_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friday"
            android:gravity="center_vertical"
            android:checkMark="?android:attr/textCheckMark"
            android:onClick="dayCheckboxOnClick" />

        <CheckedTextView
            android:id="@+id/saturday_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saturday"
            android:gravity="center_vertical"
            android:checkMark="?android:attr/textCheckMark"
            android:onClick="dayCheckboxOnClick" />

    </LinearLayout>

</ScrollView>